<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mojred">

    <supports-screens
        android:smallScreens="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:xlargeScreens="true"
        />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.Final"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.Zakazi"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Usluga"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Lokacija_Vreme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.OdaberiFirmu"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Objekti"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.LoginOrRegister"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Splashscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Naslovna"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Register"
            android:screenOrientation="portrait"/>
    </application>

</manifest>